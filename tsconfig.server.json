{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": ".next/production-server",
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false,
    "noEmit": false,
    "allowJs": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.ts",
    "./@types/**/*.d.ts",
    "./src/pages/**/*"
  ],
  "exclude": ["node_modules"]
}